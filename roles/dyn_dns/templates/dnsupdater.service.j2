[Unit]
Description = DDNS Update Service for your local machine
After = network.target
 
[Service]
Type = simple
ExecStart = python3 /opt/dnsupdater/dnsupdater.py @ {{ dyndns_url }} {{ ddns_secret }}
User = root
Group = root
Restart = on-failure
SyslogIdentifier = ddnsupdater
RestartSec = 5
TimeoutStartSec = infinity
 
[Install]
WantedBy = multi-user.target
